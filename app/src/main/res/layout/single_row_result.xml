<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android.support.v7.cardview="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android.support.v7.cardview:cardBackgroundColor="#c4daff"
        android.support.v7.cardview:cardCornerRadius="10dp"
        android.support.v7.cardview:cardElevation="10dp"
        android.support.v7.cardview:cardPreventCornerOverlap="true"
        android.support.v7.cardview:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff">
    <Button
        android:id="@+id/btn_expand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/icon_plus"
        android:background="#009688"
        android:textSize="30sp"
        android:textAlignment="textStart"
        android:gravity="start"
        android:textColor="#f9f9f9"
        android:padding="10dp"
        android:typeface="sans"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/table_result"
        android:layout_below="@+id/btn_expand"
        android:layout_marginTop="2dp"
        android:stretchColumns="*"
        android:visibility="gone"
        android:background="#B2DFDB">
    </TableLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>